{
    "private": true,
    "workspaces": [
        "packages/*",
        "website"
    ],
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "format": "prettier --write \"**/*.{ts,json,js,tsx,jsx}\""
    },
    "devDependencies": {
        "prettier": "^2.7.2",
        "typescript": "^4.9.5"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "printWidth": 120
    }
}
